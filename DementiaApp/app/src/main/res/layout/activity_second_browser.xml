<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="dementiaapp.com.dementiaapp.SecondBrowser">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LISTEN TO QUESTION"
        android:id="@+id/listenButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIEW IMAGE"
        android:id="@+id/browserImage"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/listenButton"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:id="@+id/deleteButton1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView333"
        android:layout_below="@+id/deleteButton1"
        android:layout_alignLeft="@+id/listenButton"
        android:layout_alignStart="@+id/listenButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LISTEN TO ANSWER"
        android:id="@+id/listenAnswerButton"
        android:layout_below="@+id/listenButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:id="@+id/updateButton"
        android:layout_above="@+id/deleteButton1"
        android:layout_centerHorizontal="true" />
    android:layout_marginTop="70dp" />

</RelativeLayout>
