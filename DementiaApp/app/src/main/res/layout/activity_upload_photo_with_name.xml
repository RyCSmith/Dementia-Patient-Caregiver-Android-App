<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    tools:context="dementiaapp.com.dementiaapp.UploadPhotoWithAudioActivity"
    android:background="#302F30"
    android:paddingTop="@dimen/activity_horizontal_margin">

    <Button
        android:id="@+id/pick_photo_from_phone_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Pick Existing Photo From Phone"
        android:textSize="20sp"
        android:background="#808080"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textColor="#E7BB66"
        android:layout_centerHorizontal="true"/>


    <FrameLayout
        android:id="@+id/or_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="20dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textColor="#E7BB66"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/pick_photo_from_phone_button"
        android:layout_alignParentEnd="true">



        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="#ff666666"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:id="@+id/" />-->

        <TextView
            android:id="@+id/or_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textColor="#E7BB66"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"

            android:layout_gravity="center"
            android:background="#808080"
            android:textStyle="bold|italic"
            android:textSize="20sp"
            android:fontFamily="serif"
            android:paddingBottom="10dp"
            android:paddingTop="5dp" />

    </FrameLayout>

    <Button
        android:id="@+id/take_new_photo_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/or_message"
        android:text="Take a New Photo"
        android:textSize="20sp"
        android:background="#808080"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textColor="#E7BB66"/>

</RelativeLayout>
